<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.ExamDao">

    <!-- 实体映射，可根据需要修改 -->
    <resultMap type="com.entity.ExamEntity" id="examMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="paperId" column="paper_id"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
    </resultMap>

    <!-- 查询列表 VO -->
    <select id="selectListVO" resultType="com.entity.vo.ExamVO">
        SELECT * FROM exam_homework exam_homework
        <where> 1=1 ${ew.sqlSegment} </where>
    </select>

    <!-- 查询单个 VO -->
    <select id="selectVO" resultType="com.entity.vo.ExamVO">
        SELECT exam_homework.* FROM exam_homework exam_homework
        <where> 1=1 ${ew.sqlSegment} </where>
    </select>

    <!-- 查询列表 View -->
    <select id="selectListView" resultType="com.entity.view.ExamView">
        SELECT exam_homework.* FROM exam_homework exam_homework
        <where> 1=1 ${ew.sqlSegment} </where>
    </select>

    <!-- 查询单个 View -->
    <select id="selectView" resultType="com.entity.view.ExamView">
        SELECT * FROM exam_homework exam_homework
        <where> 1=1 ${ew.sqlSegment} </where>
    </select>

    <!-- 新增导出成绩的查询 -->
    <select id="exportExamResult" resultType="com.dto.ExamExportDTO" parameterType="string">
        SELECT
            us.s_name AS studentName,
            eh.name AS examName,
            DATE_FORMAT(eh.start_time, '%Y-%m-%d %H:%i:%s') AS startTime,
            DATE_FORMAT(eh.end_time, '%Y-%m-%d %H:%i:%s') AS endTime,
            IFNULL(SUM(r.myscore),0) AS totalScore
        FROM exam_homework_student ehs
                 LEFT JOIN user_student us ON ehs.s_username = us.s_username
                 LEFT JOIN exam_homework eh ON ehs.exam_id = eh.id
                 LEFT JOIN record r ON r.s_username = ehs.s_username AND r.paperid = eh.paper_id
        WHERE eh.name = #{examName}
        GROUP BY ehs.s_username, eh.id
    </select>

    <select id="getExamsByTeacher" resultType="map" parameterType="string">
        SELECT
            eh.id AS examId,
            eh.name AS examName
        FROM exam_homework eh
                 JOIN paper p ON eh.paper_id = p.id
        WHERE p.t_username = #{teacherUsername}
    </select>

</mapper>
