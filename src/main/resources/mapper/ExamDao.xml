<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.ExamDao">

    <!-- 实体映射，可根据需要修改 -->
    <resultMap type="com.entity.ExamEntity" id="examMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="paperId" column="paper_id"/>
        <result property="status" column="status"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="tUsername" column="t_username"/>
    </resultMap>

    <!-- 查询列表 VO -->
    <select id="selectListVO" resultType="com.entity.vo.ExamVO">
        SELECT * FROM exam exam
        <where> 1=1 ${ew.sqlSegment} </where>
    </select>

    <!-- 查询单个 VO -->
    <select id="selectVO" resultType="com.entity.vo.ExamVO">
        SELECT exam.* FROM exam exam
        <where> 1=1 ${ew.sqlSegment} </where>
    </select>

    <!-- 查询列表 View -->
    <select id="selectListView" resultType="com.entity.view.ExamView">
        SELECT exam.* FROM exam exam
        <where> 1=1 ${ew.sqlSegment} </where>
    </select>

    <!-- 查询单个 View -->
    <select id="selectView" resultType="com.entity.view.ExamView">
        SELECT * FROM exam exam
        <where> 1=1 ${ew.sqlSegment} </where>
    </select>

</mapper>
