<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.CourseHomeworkReviewDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.CourseHomeworkReviewEntity" id="zuoyepigaiMap">
        <result property="kechengmingcheng" column="kechengmingcheng"/>
        <result property="zuoyemingcheng" column="zuoyemingcheng"/>
        <result property="jiaoshigonghao" column="jiaoshigonghao"/>
        <result property="jiaoshixingming" column="jiaoshixingming"/>
        <result property="xueshengzhanghao" column="xueshengzhanghao"/>
        <result property="xueshengxingming" column="xueshengxingming"/>
        <result property="zuoyepingfen" column="zuoyepingfen"/>
        <result property="pigaishijian" column="pigaishijian"/>
        <result property="jiaoshipingyu" column="jiaoshipingyu"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.ZuoyepigaiVO" >
		SELECT * FROM zuoyepigai  zuoyepigai         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.ZuoyepigaiVO" >
		SELECT  zuoyepigai.* FROM zuoyepigai  zuoyepigai 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.CourseHomeworkReviewView" >

		SELECT  zuoyepigai.* FROM zuoyepigai  zuoyepigai 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.CourseHomeworkReviewView" >
		SELECT * FROM zuoyepigai  zuoyepigai <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM zuoyepigai
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM zuoyepigai
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM zuoyepigai
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM zuoyepigai
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM zuoyepigai
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>




</mapper>
