<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.CourseVideoDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.CourseVideoEntity" id="courseVideoMap">
        <result property="title" column="title"/>
        <result property="course" column="course"/>
        <result property="cover" column="cover"/>
        <result property="tUsername" column="t_username"/>
        <result property="tName" column="t_name"/>
        <result property="video" column="video"/>
        <result property="publishAt" column="publish_at"/>
        <result property="intro" column="intro"/>
        <result property="clicktime" column="clicktime"/>
        <result property="clicknum" column="clicknum"/>
        <result property="discussnum" column="discussnum"/>
        <result property="storeupnum" column="storeupnum"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.CourseVideoVO" >
		SELECT * FROM course_video cv
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.CourseVideoVO" >
		SELECT  cv.* FROM course_video cv
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.CourseVideoView" >

		SELECT  cv.* FROM course_video cv
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.CourseVideoView" >
		SELECT * FROM course_video cv <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	


</mapper>
