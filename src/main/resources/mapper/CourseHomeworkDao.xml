<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.CourseHomeworkDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.CourseHomeworkEntity" id="homeworkMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="paperId" column="paper_id"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.CourseHomeworkVO" >
		SELECT * FROM exam_homework eh
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.CourseHomeworkVO" >
		SELECT  eh.* FROM exam_homework eh
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

	<select id="selectListView" resultType="com.entity.view.CourseHomeworkView">
		SELECT
		eh.*,
		cc.id AS courseId,
		cc.course AS courseName
		FROM exam_homework eh
		LEFT JOIN paper p ON eh.paper_id = p.id
		LEFT JOIN course_categories cc ON p.course_id = cc.id
		<where>
			1=1
			${ew.sqlSegment}
		</where>
	</select>

	<select id="selectView" resultType="com.entity.view.CourseHomeworkView">
		SELECT
		eh.*,
		cc.id AS courseId,
		cc.course AS courseName
		FROM exam_homework eh
		LEFT JOIN paper p ON eh.paper_id = p.id
		LEFT JOIN course_categories cc ON p.course_id = cc.id
		<where>
			1=1
			${ew.sqlSegment}
		</where>
	</select>
	


</mapper>
