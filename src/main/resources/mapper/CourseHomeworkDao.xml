<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.CourseHomeworkDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.CourseHomeworkEntity" id="kechengzuoyeMap">
        <result property="course" column="course"/>
        <result property="homework" column="homework"/>
        <result property="picture" column="picture"/>
        <result property="attachment" column="attachment"/>
        <result property="tUsername" column="t_username"/>
        <result property="tName" column="t_name"/>
        <result property="publishAt" column="publish_at"/>
        <result property="contxt" column="contxt"/>
        <result property="discussnum" column="discussnum"/>
        <result property="storeupnum" column="storeupnum"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.CourseHomeworkVO" >
		SELECT * FROM course_homework ch
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.CourseHomeworkVO" >
		SELECT  ch.* FROM course_homework ch
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.CourseHomeworkView" >

		SELECT  ch.* FROM course_homework ch
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.CourseHomeworkView" >
		SELECT * FROM course_homework ch <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	


</mapper>
