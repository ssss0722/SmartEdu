<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.DiscussCourseMaterialDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.DiscussCourseMaterialEntity" id="discussCourseMaterialMap">
        <result property="refid" column="refid"/>
        <result property="userid" column="userid"/>
        <result property="avatarurl" column="avatarurl"/>
        <result property="nickname" column="nickname"/>
        <result property="content" column="content"/>
        <result property="reply" column="reply"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.DiscussjiaoxueziliaoVO" >
		SELECT * FROM discuss_course_material  discussCm
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.DiscussjiaoxueziliaoVO" >
		SELECT  discussCm.* FROM discuss_course_material  discussCm
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.DiscussCourseMaterialView" >

		SELECT  discussCm.* FROM discuss_course_material  discussCm
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.DiscussCourseMaterialView" >
		SELECT * FROM discuss_course_material  discussCm <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	


</mapper>
