<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.CourseMaterialDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.CourseMaterialEntity" id="jiaoxueziliaoMap">
        <result property="title" column="title"/>
        <result property="course" column="course"/>
        <result property="picture" column="picture"/>
        <result property="attachment" column="attachment"/>
        <result property="tUsername" column="t_username"/>
        <result property="tName" column="t_name"/>
        <result property="publishAt" column="publish_at"/>
        <result property="content" column="content"/>
        <result property="clicktime" column="clicktime"/>
        <result property="clicknum" column="clicknum"/>
        <result property="discussnum" column="discussnum"/>
        <result property="storeupnum" column="storeupnum"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.CourseMaterialVO" >
		SELECT * FROM course_material cm
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.CourseMaterialVO" >
		SELECT  cm.* FROM course_material cm
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.CourseMaterialView" >

		SELECT  cm.* FROM course_material cm
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.CourseMaterialView" >
		SELECT * FROM course_material cm <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	


</mapper>
